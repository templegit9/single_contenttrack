        // Handle file selection
        function handleFileSelection(e) {
            const fileInput = e.target;
            const fileInfo = document.getElementById('file-info');
            const importPreview = document.getElementById('import-preview');
            const importDataButton = document.getElementById('import-data-btn');
            const importError = document.getElementById('import-error');
            
            // Hide previous messages
            importError.classList.add('hidden');
            
            if (fileInput.files.length === 0) {
                fileInfo.classList.add('hidden');
                importPreview.classList.add('hidden');
                importDataButton.disabled = true;
                return;
            }
            
            const file = fileInput.files[0];
            
            // Check file type
            if (file.type !== 'application/json' && !file.name.endsWith('.json')) {
                fileInfo.textContent = 'Error: Please select a JSON file';
                fileInfo.classList.remove('hidden');
                importPreview.classList.add('hidden');
                importDataButton.disabled = true;
                return;
            }
            
            // Show file info
            fileInfo.textContent = `Selected file: ${file.name} (${formatFileSize(file.size)})`;
            fileInfo.classList.remove('hidden');
            
            // Read file contents
            const reader = new FileReader();
            reader.onload = function(event) {
                try {
                    const importData = JSON.parse(event.target.result);
                    previewImportData(importData);
                    importDataButton.disabled = false;
                } catch (error) {
                    console.error('Error parsing JSON:', error);
                    importError.textContent = 'Error: Invalid JSON file format';
                    importError.classList.remove('hidden');
                    importPreview.classList.add('hidden');
                    importDataButton.disabled = true;
                }
            };
            
            reader.onerror = function() {
                importError.textContent = 'Error: Failed to read the file';
                importError.classList.remove('hidden');
                importPreview.classList.add('hidden');
                importDataButton.disabled = true;
            };
            
            reader.readAsText(file);
        }
        
