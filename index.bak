                                                const avgWatchPercentage = 0.55; // Average user watches 55% of a video
                                                const totalHours = engagement.views * duration * avgWatchPercentage;
                                                
                                                // Format with appropriate decimal places based on size
                                                let formattedHours;
                                                if (totalHours < 10) {
                                                    formattedHours = totalHours.toFixed(2);
                                                } else if (totalHours < 1000) {
                                                    formattedHours = totalHours.toFixed(1);
                                                } else {
                                                    formattedHours = Math.round(totalHours).toLocaleString();
                                                }
                                                
                                                totalHoursHtml = `<td class="px-3 py-2 whitespace-nowrap text-sm text-gray-900 dark:text-gray-200">${formattedHours}</td>`;
                                            }
                                            
                                            return `
                                            <tr>
                                                <td class="px-3 py-2 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">${formatDateTime(engagement.timestamp)}</td>
                                                <td class="px-3 py-2 whitespace-nowrap text-sm text-gray-900 dark:text-gray-200">${engagement.views.toLocaleString()}</td>
                                                ${contentItem.platform === 'youtube' ? totalHoursHtml : ''}
                                                <td class="px-3 py-2 whitespace-nowrap text-sm text-gray-900 dark:text-gray-200">${engagement.likes.toLocaleString()}</td>
                                                <td class="px-3 py-2 whitespace-nowrap text-sm text-gray-900 dark:text-gray-200">${engagement.comments.toLocaleString()}</td>
                                                <td class="px-3 py-2 whitespace-nowrap text-sm text-gray-900 dark:text-gray-200">${engagement.shares.toLocaleString()}</td>
                                            </tr>
                                            `;
                                        }).join('')}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    ` : ''}
                </div>
            `;
            
            modalContent.innerHTML = html;
            contentModal.classList.remove('hidden');
        }

        // Delete content
        async function deleteContent(id) {
            if (confirm('Are you sure you want to delete this content? This operation cannot be undone.')) {
                // Get the content item
                const contentItem = contentItems.find(c => c.id === id);
                if (!contentItem) return;
                
                // Find all content items with the same URL
                const normalizedUrl = normalizeUrl(contentItem.url);
                const sameUrlContentItems = contentItems.filter(c => normalizeUrl(c.url) === normalizedUrl);
                
                if (sameUrlContentItems.length > 1) {
                    // If there are other content items with the same URL, just remove this one
                    contentItems = contentItems.filter(c => c.id !== id);
                } else {
                    // If this is the only content item with this URL, remove it and its engagement data
                    contentItems = contentItems.filter(c => c.id !== id);
                    engagementData = engagementData.filter(e => e.contentUrl !== normalizedUrl);
                    
                    // Remove from URL map
                    delete urlToContentMap[normalizedUrl];
                }
                
                // Save to user-specific storage
                await saveUserData('contentItems', contentItems);
                await saveUserData('engagementData', engagementData);
                
                // Update UI
                renderContentItems();
                renderEngagementData();
                updateStats();
                renderCharts();
            }
        }

        // Update statistics
        function updateStats() {
            // Total content items
            totalContentEl.textContent = contentItems.length;
            
            // Calculate total engagements (views from latest record for each URL)
            let totalViews = 0;
            let engagementsByPlatform = {};
            
            // Get the latest engagement data for each content URL
            const latestEngagementByUrl = {};
            engagementData.forEach(engagement => {
                if (!latestEngagementByUrl[engagement.contentUrl] || 
                    new Date(engagement.timestamp) > new Date(latestEngagementByUrl[engagement.contentUrl].timestamp)) {
                    latestEngagementByUrl[engagement.contentUrl] = engagement;
                }
            });
            
            // Calculate totals and by platform
            Object.values(latestEngagementByUrl).forEach(engagement => {
                const contentItem = contentItems.find(item => normalizeUrl(item.url) === engagement.contentUrl);
                if (!contentItem) return;
                
                totalViews += engagement.views;
                
                engagementsByPlatform[contentItem.platform] = (engagementsByPlatform[contentItem.platform] || 0) + engagement.views;
            });
            
            totalEngagementsEl.textContent = totalViews.toLocaleString();
            
            // Find top platform
            const topPlatform = Object.keys(engagementsByPlatform).reduce((a, b) => 
                engagementsByPlatform[a] > engagementsByPlatform[b] ? a : b, null);
            
            if (topPlatform && engagementsByPlatform[topPlatform] > 0) {
                topPlatformEl.textContent = PLATFORMS[topPlatform];
            } else {
                topPlatformEl.textContent = '-';
            }
        }

        // Render charts
        function renderCharts() {
            // Get the latest engagement data for each content URL
            const latestEngagementByUrl = {};
            engagementData.forEach(engagement => {
                if (!latestEngagementByUrl[engagement.contentUrl] || 
                    new Date(engagement.timestamp) > new Date(latestEngagementByUrl[engagement.contentUrl].timestamp)) {
                    latestEngagementByUrl[engagement.contentUrl] = engagement;
                }
            });
            
            // Prepare platform chart data
            const platformData = {};
            Object.values(latestEngagementByUrl).forEach(engagement => {
                const contentItem = contentItems.find(item => normalizeUrl(item.url) === engagement.contentUrl);
                if (!contentItem) return;
                
                platformData[contentItem.platform] = (platformData[contentItem.platform] || 0) + engagement.views;
            });
            
            // Prepare content chart data
            const contentData = {};
            Object.values(latestEngagementByUrl).forEach(engagement => {
                const contentItem = contentItems.find(item => normalizeUrl(item.url) === engagement.contentUrl);
                if (!contentItem) return;
                
                contentData[contentItem.name] = engagement.views;
            });
            
            // Sort and take top 5 content items
            const topContent = Object.entries(contentData)
                .sort((a, b) => b[1] - a[1])
                .slice(0, 5);
            
            // Create or update platform chart
            const platformCtx = document.getElementById('platform-chart').getContext('2d');
            if (platformChart) {
                platformChart.destroy();
            }
            
            platformChart = new Chart(platformCtx, {
                type: 'doughnut',
                data: {
                    labels: Object.keys(platformData).map(platform => PLATFORMS[platform]),
                    datasets: [{
                        data: Object.values(platformData),
                        backgroundColor: [
                            '#FF0000', // red for Youtube
                            '#00c487', // green for ServiceNow 
                            '#0A66C2', // blue for LinkedIn
                            '#6B7280'  // gray for Others
                        ]
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
            
            // Create or update content chart
            const contentCtx = document.getElementById('content-chart').getContext('2d');
            if (contentChart) {
                contentChart.destroy();
            }
            
            contentChart = new Chart(contentCtx, {
                type: 'bar',
                data: {
                    labels: topContent.map(item => truncateText(item[0], 15)),
                    datasets: [{
                        label: 'Views',
                        data: topContent.map(item => item[1]),
                        backgroundColor: '#00c487'
                    }]
                },
                options: {
                    responsive: true,
                    indexAxis: 'y',
                    scales: {
                        x: {
                            beginAtZero: true,
                            ticks: {
                                precision: 0
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });
        }

